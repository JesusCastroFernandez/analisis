import java.util.Scanner;

public class AnalisisNumero {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Solicitamos el número entero
        System.out.print("Introduce un número entero: ");
        int numero = sc.nextInt();

        // Comprobamos si es cero
        if (numero == 0) {
            System.out.println("El número introducido es cero.");
        }

        // Comprobamos si es positivo
        if (numero > 0) {
            System.out.println("El número introducido es positivo.");
        }

        // Comprobamos si es menor que cien
        if (numero < 100) {
            System.out.println("El número introducido es menor que cien.");
        }

        // Comprobamos si es par
        if (numero % 2 == 0) {
            System.out.println("El número introducido es par.");
        }

        sc.close();
    }
}
